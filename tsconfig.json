{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["DOM", "ES2020"],
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "outDir": "./dist"
  },
  "files": ["src/client/index.ts", "src/server/index.ts"],
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/**/*.test.ts"]
}
